---
import '../styles/global.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Self Hosted Recipes</title>
	</head>

	<body>
		<div class="grid place-items-center h-screen content-center">
			<div class="text-center space-y-6">
				<h1 class="text-4xl font-bold text-gray-900">Self Hosted Recipes</h1>
				<p class="text-lg text-gray-600">Welcome to your recipe management system</p>

				<div class="flex gap-4 justify-center">
					<a href="/login" class="px-6 py-3 bg-purple-600 text-white font-semibold rounded-lg shadow-md hover:bg-purple-700 transition-colors">
						Login
					</a>
					<a href="/signup" class="px-6 py-3 bg-white text-purple-600 font-semibold rounded-lg shadow-md border-2 border-purple-600 hover:bg-purple-50 transition-colors">
						Sign Up
					</a>
				</div>

				<div class="pt-8">
					<a href="/markdown-page" class="text-sm text-gray-500 underline hover:text-gray-700">
						View Markdown example page
					</a>
				</div>
			</div>
		</div>
	</body>
</html>
